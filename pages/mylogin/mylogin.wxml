<view data-weui-theme="{{theme}}">
  <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar" src="{{user.avatarurl}}"></image>
  </button> 
 <form bindsubmit="formSubmit">
  <mp-cells>
      <mp-cell title="昵称">
        <input  name="username" type="nickname" class="weui-input" placeholder="请输入昵称"/>
      </mp-cell>
    </mp-cells>
    <button bindtap="goback" form-type="submit" type="primary">提交</button>
 </form>
</view>