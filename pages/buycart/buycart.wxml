<!-- 购物车内容 -->
<block wx:if="{{cart.length!=0}}">
  <view class="content" wx:for="{{cart}}" wx:key="{{id}}">
  <view class="contentitem">
    <!-- 复选框 -->
    <view class="check">
      <checkbox-group data-id="{{item.id}}" bindchange="handitemchange">
        <checkbox checked="{{item.checked}}"></checkbox>
      </checkbox-group>
    </view>
    <!-- 商品图片 -->
    <navigator url="">
    <image src="{{item.src}}" mode="widthFix"/>
    </navigator>
    <!-- 价格 -->
    <view class="edit">
    <view class="price">
      ¥:{{item.price}}
    </view>
    <!-- 商品加减 -->
    <view  class="jiajian">
      <view  bindtap="handjiajian" data-id="{{item.id}}" data-operation="{{-1}}"> 
        -
      </view>
      <view>
        {{item.num}}
      </view>
      <view  bindtap="handjiajian" data-id="{{item.id}}" data-operation="{{1}}">
        +
      </view>
    </view>
      
    </view>
  </view>
</view>
</block>
<block wx:else>
  <view>
    当前购物车为空
  </view>
</block>

<!-- 底部栏 -->
<view class="bot">
  <view>全选
    <checkbox-group bindchange="handallcheck">
      <checkbox checked="{{allchecked}}" value=""/>
    </checkbox-group>
  </view>

<view class="totalprice">
  总价¥：{{totalprice}}
</view>
<view class="pay" bindtap="pay">
  结算：{{totalnum}}
</view>
</view>