/* pages/message1/message1.wxss */
page {
  height: 100%;
  background-image: url(https://itisthestar.oss-cn-hangzhou.aliyuncs.com/background1.png);
  background-repeat: no-repeat;
 background-size: 100vw 100vh;
 background-attachment: fixed;

}

.box {
  display: flex;
  flex-direction: row;
  height: 100%;
  background-color: transparent;
}

.box .left {
  height: 100vh;
  border-right: 3px solid red;

}

.box .right {
  height: 100vh;

}

.left {
  height: 1000px;
  width: 38vw;
  background-color: rgba(255, 255, 255, 0.8);
}

.right {
  height: 1000px;
  width: 62vw;
  background-color: rgba(255, 255, 255, 0.7);
}

.left view {
  height: fit-content;
  width: 75%;
  margin: auto;
  margin-top: 20rpx;
  line-height: 40rpx;
  text-align: center;
  border: 2px solid black;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 3rpx 1rpx black;
  font-size: 30rpx;
  font-weight: 800;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.active {
  color: white;
  background-color: red;



}

.rightcontent view navigator {
  width: 80%;
  height: fit-content;
  border: 1px solid red;
  margin: auto;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 50rpx;
  border-radius: 10rpx;
  padding-top: 20rpx;
  box-shadow: 4rpx 4rpx 10rpx 5rpx red;


}