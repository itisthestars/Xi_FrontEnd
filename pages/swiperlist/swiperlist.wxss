}

.title{
  border: 1rpx solid transparent;
  padding-top: 80rpx;
  height: fit-content;
  text-align: center;
  font-weight: 700;
  font-size: 50rpx;
  background-color: rgba(255, 255,255, 0.6);
  
  border-top-left-radius:50rpx;
  border-top-right-radius:50rpx;
}
