.content {
  position: relative;
  margin: auto;
  margin-top: 40rpx;
  height: fit-content;
  width: 90vw;
  background-color: rgba(255, 255,255, 0.6);
  white-space: pre-line;
  font-size: 40rpx;
  font-weight: 400;
  border-radius: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 70rpx;
  background-image: url(https://itisthestar.oss-cn-hangzhou.aliyuncs.com/background8.jpg);
